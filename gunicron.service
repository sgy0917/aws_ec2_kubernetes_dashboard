[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/var/www/security_dashboard/mysite
Environment="PATH=/var/www/security_dashboard/mysite/venv/bin"
Environment="PYTHONPATH=/var/www/security_dashboard/mysite"
EnvironmentFile=/var/www/security_dashboard/mysite/.env

ExecStart=/var/www/security_dashboard/mysite/venv/bin/gunicorn \
    --workers 3 \
    --bind unix:/var/www/security_dashboard/mysite/gunicorn.sock \
    --timeout 120 \
    --log-level info \
    --access-logfile /var/log/gunicorn/access.log \
    --error-logfile /var/log/gunicorn/error.log \
    config.wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
